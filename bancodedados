CREATE TABLE `lixeiras` (
	`id` INTEGER NOT NULL AUTO_INCREMENT UNIQUE,
	`lat` DOUBLE NOT NULL,
	`long` DOUBLE NOT NULL,
	PRIMARY KEY(`id`)
);


CREATE TABLE `usuarios` (
	`id` INTEGER NOT NULL AUTO_INCREMENT UNIQUE,
	`nome` VARCHAR(255) NOT NULL,
	`idade` SMALLINT NOT NULL,
	`email` VARCHAR(255) NOT NULL,
	PRIMARY KEY(`id`)
);


CREATE TABLE `locais` (
	`id` INTEGER NOT NULL AUTO_INCREMENT UNIQUE,
	`nome` VARCHAR(255) NOT NULL,
	`lat` DOUBLE,
	`long` DOUBLE,
	PRIMARY KEY(`id`)
);


CREATE TABLE `local_lixeiras` (
	`id_local_lixeira` INTEGER NOT NULL AUTO_INCREMENT UNIQUE,
	`id_local` INTEGER,
	`id_lixeira` INTEGER,
	PRIMARY KEY(`id_local_lixeira`)
);


ALTER TABLE `local_lixeiras`
ADD FOREIGN KEY(`id_local`) REFERENCES `locais`(`id`)
ON UPDATE NO ACTION ON DELETE NO ACTION;
ALTER TABLE `local_lixeiras`
ADD FOREIGN KEY(`id_lixeira`) REFERENCES `lixeiras`(`id`)
ON UPDATE NO ACTION ON DELETE NO ACTION;
